#:kivy 1.9.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import TabbedPanel kivy.uix.tabbedpanel.TabbedPanel

ScreenManagement:
	transition: FadeTransition()
	LoginScreen:
	MainScreen:

<LoginScreen>:
	name: "Login"
	BoxLayout:
		id: login_layout
		orientation: 'vertical'
		padding: [10,50,10,50]
		spacing: 50

		Label:
			text: "ChatBuilder sampler app"
			font_size: 32

		BoxLayout:
			orientation: "vertical"

			Label:
				text: "Login"
				font_size: 18
				halign: 'left'
				text_size: root.width-20, 20

			TextInput:
				id: login
				multiline:False
				font_size: 28

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: "Password"
				halign: "left"
				font_size: 18
				text_size: root.width-20, 20

			TextInput:
				id: password
				multiline:False
				password:True
				font_size: 28

		Button:
			text: "Connexion"
			font_size: 24

			on_press: root.doLogin(login.text, password.text)

<MainScreen>:
	name: "Main"
	TabbedPanel:
		TabbedPanelItem:
			text: "Chat"
			BoxLayout:
				id: login_layout
				orientation: 'vertical'
				padding: [10,50,10,50]
				spacing: 50

				BoxLayout:
					orientation: "vertical"

					Label:
						text: "Write message here"
						font_size: 18
						halign: 'left'
						text_size: root.width-20, 20

					TextInput:
						id: message
						multiline:True
						font_size: 28


				Button:
					text: "Send"
					font_size: 24

					on_press: root.doSendMessage(message.text)
		
		TabbedPanelItem:
			text: "Friends"






